{
    "name": "gertvdb/legacy-bridge-bundle",
    "description": "bridge symfony 5",
    "authors": [
        {
            "name": "Gert van den Buijs",
            "email": "gert.vandenbuijs@tactics.be"
        }
    ],
    "repositories": [],
    "require": {
        "symfony/symfony": "^5.0"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Tactics\\LegacyBridgeBundle\\": ""
        }
    },
    "scripts": {
        "phpcs": [
            "vendor/bin/phpcs"
        ],
        "phpcbf": [
            "vendor/bin/phpcbf"
        ],
        "phpunit": [
            "vendor/bin/phpunit --configuration=phpunit.xml --colors=always --testdox --coverage-clover build/logs/clover.xml"
        ],
        "codingStandards": [
            "@phpcs",
            "@phpcbf"
        ],
        "test": [
            "@phpunit"
        ],
        "build": [
            "@codingStandards",
            "@phpunit"
        ]
    }
}
